{
  "name": "garancev.github.io",
  "version": "1.0.0",
  "description": "garance's personal blog",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "handlebars": "node index.js",
    "css": "npm run postcss:main && npm run postcss:pasta && npm run postcss:recipe",
    "postcss:main": "postcss --use cssnano -c postcss-config.json -o dist/css/main.css src/css/main.css",
    "postcss:pasta": "postcss --use cssnano -c postcss-config.json -o dist/css/pasta.css src/css/pasta.css",
    "postcss:recipe": "postcss --use cssnano -c postcss-config.json -o dist/css/recipe.css src/css/recipe.css",
    "assets": "cp -R src/assets dist/ && cp src/favicon.ico dist/",
    "clean": "rm -rf dist",
    "watch": "npm run watch:hbs & npm run watch:css & npm run watch:assets",
    "watch:hbs": "onchange 'src/templates/*.hbs' 'src/pages/*.hbs' 'src/index.hbs' -- npm run handlebars",
    "watch:css": "onchange 'src/css/*.css' -- npm run css",
    "watch:assets": "onchange 'src/assets/*.*' -- npm run assets",
    "build": "npm run clean && mkdir dist && cp CNAME dist/ && npm run handlebars && npm run css && npm run assets",
    "serve": "http-server -c-1 dist/"
  },
  "repository": {
    "type": "git",
    "url": "git@me.github.com:garancev/garancev.github.io.git"
  },
  "keywords": [
    "blog"
  ],
  "author": "Garance Flore Vallat",
  "license": "ISC",
  "devDependencies": {
    "cssnano": "^3.10.0",
    "handlebars": "^4.0.11",
    "onchange": "^3.3.0",
    "postcss": "^6.0.17"
  }
}
